        <activity
            android:name="attender.oparkCard.subscription.activity.ReprintReceipt"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="attender.oparkCard.shiftreport.PDFShow"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="attender.oparkCard.vehiclelist.activity.LossReceipt"
            android:screenOrientation="portrait"
